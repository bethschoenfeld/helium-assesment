<h1>Editing Employee</h1>

<%= render 'form', employee: @employee %>

<%= link_to 'Back', employees_path %>

<h1>Children</h1>

<% if @child_exists == 0 %>
  <h2> This employee has no children </h2>
<% else %>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Birth Date</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Gender</th>
        <th colspan="5"></th>
      </tr>
    </thead>

    <tbody>
      <% @children.each do |child| %>
        <% if child.employee_id == @employee.id %>
          <tr>
            <td><%= child.id %></td>
            <td><%= child.birth_date %></td>
            <td><%= child.first_name %></td>
            <td><%= child.last_name %></td>
            <td><%= child.gender %></td>
          </tr>
        <%end%>
      <%end%>
    </tbody>
  </table>
<%end%>